<div class="container d-flex justify-content-center mt-3">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-4">
      <% if cocktail.photo.present? %>
<div class="card-cocktail p-3 m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 500, width: 700, crop: :fill %>')">
      <% else %>
<div class="card-cocktail p-3 m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cocktail.img %>')">
<% end %>
       <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>
    </div>
    <% end %>
  </div>
</div>
