<div class="content">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card-cocktail p-3 m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 500, width: 700, crop: :fill %>')">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>
    <% end %>
  </div>
</div>
